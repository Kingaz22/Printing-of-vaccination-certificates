<dx:ThemedWindow
    x:Class="PrintCertVac.Windows.AddTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Название шаблона" Height="200" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    >
    <Grid>
        <StackPanel CanHorizontallyScroll="True">
            <TextBlock Margin="10" Text="Введите название шаблона" FontFamily="times new roman" 
                       TextAlignment="Center" FontSize="18" TextWrapping="Wrap"/>
            <TextBox Name="txt" Margin="20,2" FontSize="18" FontFamily="times new roman"/>
            <dx:SimpleButton Width="180" Height="30" Content="Ок"   Margin="0, 3" Click="SimpleButton_Click" />
            <dx:SimpleButton Width="180" Height="30" Content="Отмена" IsCancel="True"   Margin="0, 3"/>
        </StackPanel>

    </Grid>
</dx:ThemedWindow>
